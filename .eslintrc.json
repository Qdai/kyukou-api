{
  "extends": [
    "@egy186/eslint-config",
    "@egy186/eslint-config/node"
  ],
  "overrides": [
    {
      "files": [
        "test/**/*.js"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "no-unused-expressions": "off",
        "node/global-require": "off"
      }
    }
  ],
  "rules": {
    "class-methods-use-this": "off",
    "jsdoc/no-undefined-types": "off"
  }
}
